<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="#C51162"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/back"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_backspace_white_24dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:src="@drawable/taylor"
        app:civ_border_color="#283593"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="CÃ¹ng Anh"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Min ff"
        android:textSize="22sp"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"
        />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="750px"
            android:layout_height="100px"
            android:layout_marginLeft="130px"
            />

        <TextView
            android:layout_marginLeft="3dp"
                android:id="@+id/time_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:text="00:00" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:text="00:00" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/preous"
            android:layout_marginLeft="80dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_skip_previous_white_24dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pause"
            android:layout_marginLeft="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_pause_white_24dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/next"
            android:layout_marginLeft="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_skip_next_white_24dp" />

    </LinearLayout>




</LinearLayout>